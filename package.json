{
  "name": "react-helpful-utils",
  "version": "1.0.4",
  "description": "Fast, tree-shakable, and light-weight React utils and hooks",
  "author": "Andrii Dubetskyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krombik/react-helpful-utils.git"
  },
  "bugs": {
    "url": "https://github.com/Krombik/react-helpful-utils/issues"
  },
